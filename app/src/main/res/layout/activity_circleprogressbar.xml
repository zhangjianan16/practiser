<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:orientation="vertical"
    >


    <com.zjn.practiser.view.CircleProgressBar
        android:id="@+id/circleprofressbar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:roundProgressColor="@color/blue"
        app:roundWith="5dp"
        app:textColor="#00ff00"
        app:textSize="26sp"
        />

    <com.zjn.practiser.view.LinearGradientTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_light"
        android:text="文字跑马灯闪烁效果实现"
        android:textSize="16sp"
        android:background="@color/black"
        />
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"/>
    <com.zjn.practiser.view.RoundLightBarView
        android:id="@+id/circle"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
</LinearLayout>